{
  "name": "budget-tracker",
  "version": "1.0.0",
  "description": "AI-powered financial budgeting application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:mobile\" \"npm run dev:backend\" \"npm run dev:ai\"",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:backend": "cd services/backend && go run main.go",
    "dev:ai": "cd services/ai && python main.py",
    "build": "npm run build:mobile && npm run build:backend && npm run build:ai",
    "build:mobile": "cd apps/mobile && npx expo export",
    "build:backend": "cd services/backend && go build -o bin/backend main.go",
    "build:ai": "cd services/ai && docker build -t budget-tracker-ai .",
    "lint": "npm run lint:mobile && npm run lint:backend",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "lint:backend": "cd services/backend && golangci-lint run",
    "test": "npm run test:mobile && npm run test:backend && npm run test:ai",
    "test:mobile": "cd apps/mobile && npm test",
    "test:backend": "cd services/backend && go test ./...",
    "test:ai": "cd services/ai && python -m pytest",
    "setup": "npm install && npm run setup:mobile && npm run setup:backend && npm run setup:ai",
    "setup:mobile": "cd apps/mobile && npm install",
    "setup:backend": "cd services/backend && go mod download",
    "setup:ai": "cd services/ai && pip install -r requirements.txt",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules services/backend/bin services/ai/__pycache__"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": ["finance", "budgeting", "ai", "react-native", "golang", "python"],
  "author": "Budget Tracker Team",
  "license": "MIT"
}